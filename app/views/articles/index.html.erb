<div class="container">
  <h1>Wikinimous articles</h1>
  <% @articles.each do |article| %>
    <div class="card">
     <div class="image">
        <img src="../app/assets/images" alt="this should be an image">
     </div>
      <h3><%= article.title %></h3>
      <button class="btn-medium">
      <%= link_to "More details", "articles/#{article.id}"%>
      </button>
    </div>
  <% end %>
</div>
